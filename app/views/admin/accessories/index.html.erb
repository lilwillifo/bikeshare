<section class='title'>
  <h1>Bike Shop</h1>
</section>
<div class='all_cards'>
  <% @accessories.each do |accessory| %>
  <div class="card">
    <tr class="accessory_<%=accessory.id%>">
      <%= image_tag accessory.image.url, class: 'image' %>
      <%= link_to accessory.title, accessory_path(accessory) %></p>
      <p>$<%= accessory.price %></p>
      <p><%= accessory.description %></p>
      <% if accessory.role == 'active' %><%= link_to 'Retire', admin_accessories_path, method: 'patch'  %>
        <p>Accessory Active</p>
      <% else %>
        <p>Accessory Retired</p><%= link_to 'Reactivate', admin_accessories_path, method: 'patch'  %>
      <% end %>
      <%= link_to 'Edit', edit_admin_accessory_path(accessory) %>
    </tr>
  </div>
  <% end %>

  <%= link_to 'Add New Accessory', new_admin_accessory_path %>
</div>
