<%= form_for [:admin, @trip] do |f| %>
  <%= f.label :duration %>
  <%= f.number_field :duration %>

  <br>

  <%= f.label :start_date %>
  <%= f.date_field :start_date %>

  <br>

  <%= f.label :end_date %>
  <%= f.date_field :end_date %>

  <br>

  <%= f.label :bike_id %>
  <%= f.number_field :bike_id %>

  <br>


  <%= f.label :subscription_type %>
  <%= f.select :subscription_type, Trip.subscription_types.keys %>

  <br>

  <%= f.label :zip_code %>
  <%= f.number_field :zip_code %>


  <br>

  <%= f.label :start_station %><br/>
  <%= f.collection_select :start_station_id, Station.order(:name), :id, :name %>

  <br>

  <%= f.label :end_station %><br/>
  <%= f.collection_select :end_station_id, Station.order(:name), :id, :name %>

  <%= f.submit %>
<% end %>
